<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TextAppearance -->
    <style name="TextAppearance.Title" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:letterSpacing">@dimen/letter_spacing_default</item>
    </style>

    <style name="TextAppearance.Subtitle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_size_subtitle</item>
        <item name="android:letterSpacing">@dimen/letter_spacing_default</item>
    </style>

    <style name="TextAppearance.Desc" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_size_default</item>
        <item name="android:letterSpacing">@dimen/letter_spacing_default</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/margin_50</item>
        <item name="android:layout_marginEnd">@dimen/margin_50</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
    </style>

    <style name="TextAppearance.Common" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_size_default</item>
        <item name="android:letterSpacing">@dimen/letter_spacing_default</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/font_size_buttons</item>
        <item name="android:letterSpacing">@dimen/letter_spacing_default</item>
    </style>

    <!-- Buttons / CTAs -->
    <style name="Widget.App.Button.Primary" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="android:layout_height">@dimen/height_button_default</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.LargeComponent</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="android:background">@drawable/background_button</item>
    </style>

    <style name="Widget.App.Button.Secondary" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="android:layout_height">@dimen/height_button_default</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.LargeComponent</item>
        <item name="android:textColor">@color/orange</item>
        <item name="backgroundTint">@color/white</item>
    </style>

</resources>
