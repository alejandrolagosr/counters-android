<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Common" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">@dimen/letter_spacing_default</item>
    </style>

    <!-- Toolbar -->
    <style name="TextAppearance.Toolbar.Title" parent="TextAppearance.Common">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_toolbar</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">start</item>
    </style>

</resources>